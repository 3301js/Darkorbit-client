{
  "name": "darkorbit-client",
  "version": "1.0.1",
  "description": "Open source darkorbit client",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
		"build": "electron-builder --windows --linux",
		"release": "electron-builder --windows --linux --publish always"
  },
  "author": "Kaiserdj",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "xml2js": "^0.4.23"
  },
  "build": {
    "appId": "com.DarkOrbitClient.Kaiserdj",
    "productName": "DarkOrbit Client",
    "extraResources": "./flash/**",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.games"
    }
  }
}
